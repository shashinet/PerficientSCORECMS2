@using Perficient.Web.Features.Blocks.Collections.Tabs
@model TabPanelBlock

@{
    var classes = Model.GetClassList();
    var editClass =  ViewContext.HttpContext.GetContentLink() == ((IContent)Model).ContentLink ? "single-edit-tabset" : string.Empty;
}

<div class="score-tab @editClass @classes" id="tabset1">
    <!-- Nav tabs -->
    <ul class="nav nav-tabs" id="myTab" role="tablist">
        <li class="nav-item">
            <a class="nav-link active" id="tab1" data-toggle="tab" href="#tab1-tab" role="tab" aria-controls="tab1" aria-selected="true" @Html.EditAttributes(x => x.PanelTitle)>
                @Html.DisplayFor(x => x.PanelTitle)
            </a>c
        </li>
    </ul>
    <!-- Tab panes -->
    <div class="tab-content">
        <div class="tab-pane active" id="tab1" role="tabpanel" aria-labelledby="tab1-tab">
            <div class="score-content-spot rich-text" @Html.EditAttributes(x => x.PanelText)>
                @Html.DisplayFor(x => x.PanelText)
            </div>
        </div>
    </div>
</div>
